    <!-- Fontawesome icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
     <link rel="stylesheet" href="../css/dashboard.css">
    <link rel="stylesheet" href="../css/ecobrick-profile.css">
    <title>Eco-brick-Channel</title>
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Ecobrick Channel</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link"  href="/users/contactlist"><button type="button" class="btn btn-primary">Contacts</button></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/logout"><button type="button" class="btn btn-primary">Log-out</button></a>
          </li>
        

          <li class="nav-item">
            <form  action="/users/profile" method="POST"  >
              <input type="hidden" name='myUserId' value='<%=user.id %>'>
              <input type='hidden' name='myUserName' value = '<%= user.name %>' >
              <input type='hidden' name='myUserEmail' value = '<%= user.email %>' >
              <input type='hidden' name='myUserPhone' value = '<%= user.phone %>' >
              <input type='hidden' name='myUserCity' value = '<%= user.city %>' >
              <input type='hidden' name='myUserState' value = '<%= user.state %>' >
              <input type='hidden' name='myUserCountry' value = '<%= user.country %>' > 
              <input type='hidden' name='myUserAddress' value='<%= user.address %>' > 
              <input type='hidden' name='myUserJobRole' value = '<%= user.job_role %>' >
              <input type='hidden' name='myUserCost' value = '<%= user.cost %>' >
              <input type='hidden' name='myUserCapacity' value = '<%= user.capacity %>' >
              <li class="nav-item">
                <a class="nav-link"> <button type="submit" class="btn btn-primary">Profile</button></a>
              </li>
            </form>
       
          </li>

              <li class="nav-item notification">
                <a  class="nav-link" href="/users/notification" class="notification" style="color: black;"><i class="fa fa-bell " style="font-size: 28px;" aria-hidden="true"></i>
                  <% if( notificationNumber != 0) { %>
                    
                  <span class="badge"><%= notificationNumber %></span>
                  <% } %>
                </a>
              </li>

              <form method= "POST" action="/users/search" class="d-flex">
                <input
                  class="form-control me-2"
                  type="search"
                  name="searchByName"
                  placeholder="Search"
                  aria-label="Search"
                />
             
        
         
           
          
        </ul>
      </div>
    </nav>
    

    
       
         
      
       
      <div></div>
    </div>
      <ul>
        <% if(typeof messages != 'undefined') { %>
        <% if(messages.success_msg) { %>
        <li><%= messages.success_msg %></li>
        <% } %>
        <% if(messages.message) { %>
          <li><%= messages.message %></li>
          <% } %>
        <% } %>
      </ul>
    </nav>
    
        
         
          <div class="cardsBox">
            <% for(var i=0; i < contactlist.length; i++) { %>
            <div class="card welcome" style="width: 18rem">
              <img src="../css/images/individual_icon.jpg" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title"><%=contactlist[i].company%></h5>
                <p class="card-text">Sell eco bricks to us! at a price of <%=contactlist[i].cost%></p>
                <p class="card-text">Location <%=contactlist[i].city%>,<%=contactlist[i].state%>,<%=contactlist[i].country%></p>
                <a href="/users/sellform?id=<%=contactlist[i].id%>" class="btn btn-primary">Interested</a>
                <a href="/users/queryform?id=<%=contactlist[i].id%>" class="btn btn-primary">Submit a query</a>
              </div>
            </div>
            <% } %>
            <% for(var i=0; i < personlist.length; i++) { %>
              <div class="card welcome" style="width: 18rem">
                <img src="../css/images/individual_icon.jpg" class="card-img-top" alt="..." />
                <div class="card-body">
                  <h5 class="card-title"><%=personlist[i].name%></h5>
                  <p class="card-text">Buy eco-bricks from me!</p>
                  <a href="/users/buyform?id=<%=personlist[i].id%>" class="btn btn-primary ">Interested</a>
                  <a href="/users/queryform?id=<%=personlist[i].id%>" class="btn btn-primary">Submit a query</a>
                </div>
              </div>
              <% } %>
      
   
 
      </div>
  
  </body>
</html>

